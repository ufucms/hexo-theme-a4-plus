<div class="archive-list">
  <ul class="archive">

    <% var pageCategoriesName = path.substring("categories/".length, path.indexOf("/index.html")) %>
    <span>ğŸ”–<i><%= pageCategoriesName %></i></span>
      <% var categoriesArray = eval('site.categories.data') %>
      <% var pageCategoriesData %>
      <% for (let i = 0; i < categoriesArray.length; i++) { 
        if(categoriesArray[i].name == pageCategoriesName) {
          pageCategoriesData = categoriesArray[i];
        }}
      %>
          
    <% var array = pageCategoriesData.posts.data %>
    <% array.sort((a, b) => {
      if (a.date > b.date) {
        return -1;
      }
      if (a.date < b.date) {
        return 1;
      }
      return 0;
    }) 
  %>
  <% for (let i = 0; i < array.length; i++) { %>
    <% if (!('hide' in array[i]) || array[i].hide == false) {%>
        <li>
          <span class="archive-date"><%= date(array[i].date, "YYYY/MM/DD HH:mm") %></span>
          <div class="archive-main">
              <% if(array[i].categories.length > 0) { %>
                <a class="archive-category"  href="/<%= array[i].categories.data[0].path %>">
                  [<%= array[i].categories.data[0].name %>]
                </a> 
              <% } %>
              <a class="archive-title" href="<%- url_for(array[i].path) %>"><%= array[i].title %></a>
          </div>
        </li>
    <% } %>
  <% } %>
  </ul>
</div>

<%- partial('_partial/paginator') %>